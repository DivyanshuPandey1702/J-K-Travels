header.header
    nav.nav.nav--tours
        a.nav__el(href="/") All tours 
    .header__logo
        h1.logo J&K Travels
    nav.nav.nav--user
        if user
            a.nav__el.nav__el--logout(href="/") Log out
            a.nav__el(href="/me")
                img.nav__user-img(src=`/img/users/${user.photo}`, alt=`photo of ${user.name}`)
                span= user.name.split(' ')[0]
        else 
            a.nav__el(href="/login") Login
            a.nav__el.nav__el--cta(href="/signup") Sign Up